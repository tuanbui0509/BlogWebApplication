{
  "extends": "./tsconfig.json", // Inherit common settings from the main tsconfig.json
  "compilerOptions": {
    "target": "ES2020", // Set the JavaScript version for Node.js compatibility
    "module": "CommonJS", // Use CommonJS modules (standard for Node.js)
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "skipLibCheck": true, // Skip library type checking for faster compilation
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include server-side TypeScript files
  "exclude": ["node_modules", "dist", "build"] // Exclude non-server code
}
