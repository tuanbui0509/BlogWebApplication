{
  "extends": "./tsconfig.json", // Inherit common settings from the base tsconfig.json
  "compilerOptions": {
    "target": "ESNext", // Modern JavaScript features for frontend code
    "module": "ESNext", // Use ES module syntax (supports `import`/`export`)
    "jsx": "react-jsx", // Enable JSX syntax for React
    "moduleResolution": "node", // Use Node.js-style module resolution
    "esModuleInterop": true, // Allow importing CommonJS modules
    "skipLibCheck": true, // Skip type checking for libraries for faster build
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include frontend TypeScript files
  "exclude": ["node_modules", "dist", "build"] // Exclude irrelevant folders
}
